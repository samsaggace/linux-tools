#------------------------------------------------------------------------------
# Default VAL 
#------------------------------------------------------------------------------

[ -z "$TMPDIR"        ] && export  TMPDIR="${HOME}/tmp"
[ -z "$MATRICULE"     ] && export  MATRICULE=
[ -z "$MYHOST"        ] && export  MYHOST=
[ -z "$LC_ALL"        ] && export  LC_ALL=en_US.UTF-8



#------------------------------------------------------------------------------
# TEAM TOOLS ENV
#------------------------------------------------------------------------------

if [ -n "$TOOLS_SET_IN_PROFILE" ]; then
   URL_SVN=http://forge-urd44.osn.sagem/svn
   ToolsBO=$URL_SVN/sagem-tools-modrivers/BO/branches/BO_sagem-tools-modrivers${TOOLS_BETA}

   if [ "$USER" = "$MATRICULE" ]; then
      if [ -z "$SVN_IS_DOWN" ]; then
         svn export -q $ToolsBO/set-tools-modrivers.sh
         mv ./set-tools-modrivers.sh $HOME/.set-tools-modrivers.sh
      fi;

     $HOME/.set-tools-modrivers.sh
   fi

   . $HOME/.tools-modrivers.env
fi



#------------------------------------------------------------------------------
# ZSH/BASH Definitions
#------------------------------------------------------------------------------

   . $LIBS_PATH/colors
   . $LIBS_PATH/debug
   . $LIBS_PATH/gvim/funktions
   . $LIBS_PATH/zsh/aliases
   . $LIBS_PATH/env/funktions
   . $LIBS_PATH/zsh/splash

if [ "`shell-name`" = "zsh" ]; then
   . $LIBS_PATH/zsh/suffaliases
   . $LIBS_PATH/zsh/options
   . $LIBS_PATH/zsh/compcfg
   . $LIBS_PATH/fsvn/funktions   
   . $LIBS_PATH/zsh/config

   if [ -e ~/.zsh_profile ]; then
      . ~/.zsh_profile
   fi
else
   . $LIBS_PATH/bash/prompt
fi



#------------------------------------------------------------------------------
# Paths
#------------------------------------------------------------------------------

[ -z "$SCRIPTS"      ] && e SCRIPTS=${HOME}/tools/scripts
[ -z "$TOOLSET_ROOT" ] && e TOOLSET_ROOT=${HOME}/toolschains
[ -z "$KERNEL_ROOT"  ] && e KERNEL_ROOT=${HOME}/kernels
[ -z "$TARGET_ROOT"  ] && e TARGET_ROOT=${HOME}/rootfs/uclibc_2.3
[ -z "$NFS_ROOT"     ] && e NFS_ROOT=${TARGET_ROOT}

e PATH="$SCRIPTS":"$PATH"



#------------------------------------------------------------------------------
# aliases & variables
#------------------------------------------------------------------------------

a  vi='gvim -g -geometry 1280x1024'
e  SVN_EDITOR='vi'

if [ -f "${HOME}/.gnupg/.gpg-agent-info-${HOST}" ]; then
       . "${HOME}/.gnupg/.gpg-agent-info-${HOST}"
       export GPG_AGENT_INFO
       export SSH_AUTH_SOCK
       export SSH_AGENT_PID
fi
GPG_TTY=$(tty)
export GPG_TTY

