. $LIBS_PATH/colors

#------------------------------------------------------------------------------
ECHO=echo

#------------------------------------------------------------------------------
disp-normal ()
{
   $ECHO "$COL_RST$@$COL_RST"
}
#------------------------------------------------------------------------------
disp-frame ()
{
   $ECHO "$COL_FRAME$@$COL_RST"
}
#------------------------------------------------------------------------------
disp-info ()
{
   $ECHO "$COL_INFO$@$COL_RST"
}
#------------------------------------------------------------------------------
disp-warn ()
{
   $ECHO "$COL_WARN$@$COL_RST"
}
#------------------------------------------------------------------------------
disp-error ()
{
   $ECHO "$COL_ERROR$@$COL_RST"
}
#------------------------------------------------------------------------------
disp-success ()
{
   $ECHO "$COL_SUCCESS$@$COL_RST"
}
#------------------------------------------------------------------------------
disp-confirm ()
{
   $ECHO "$COL_CONFIRM$@$COL_RST"
   read Ans
   if [ "$Ans" != "y" ]; then
      return 1
   fi
   return 0
}
#------------------------------------------------------------------------------
disp-debug ()
{
   $ECHO "$COL_DEBUG$@$COL_RST"
}

